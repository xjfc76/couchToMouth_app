<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â† Back"
                style="@style/Widget.Material3.Button.TextButton" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/settings"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center" />

            <Button
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save" />

        </LinearLayout>

        <!-- POS URL -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="POS URL"
            android:textStyle="bold"
            android:textSize="16sp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPosUrl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="https://your-server.com/ospos/"
                android:inputType="textUri" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Printer Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Printer"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvPrinterName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Not configured" />

            <Button
                android:id="@+id/btnSetupPrinter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setup Printer" />

        </LinearLayout>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchCashDrawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Has Cash Drawer"
            android:layout_marginTop="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchPaperCutter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Has Paper Cutter"
            android:checked="true" />

        <!-- Payment Provider Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Provider"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <RadioGroup
            android:id="@+id/rgPaymentProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <RadioButton
                android:id="@+id/rbNone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="None (Cash only)" />

            <RadioButton
                android:id="@+id/rbSumUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SumUp" />

            <RadioButton
                android:id="@+id/rbZettle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zettle (PayPal)" />

        </RadioGroup>

        <!-- SumUp Credentials -->
        <LinearLayout
            android:id="@+id/layoutSumUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SumUp Settings"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvSumUpStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Not logged in"
                android:layout_marginTop="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <Button
                    android:id="@+id/btnSumUpLogin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Login to SumUp" />

                <Button
                    android:id="@+id/btnSumUpCardReader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Pair Card Reader"
                    style="@style/Widget.Material3.Button.OutlinedButton" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSumUpAffiliateKey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Affiliate Key (sup_afk_xxx)" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSumUpAppId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="App ID" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Zettle Credentials -->
        <LinearLayout
            android:id="@+id/layoutZettle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/bg_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Zettle Credentials"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etZettleClientId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Client ID" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Print Settings -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Print Settings"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoPrintCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-print for Card payments"
            android:checked="true"
            android:layout_marginTop="8dp" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switchAutoPrintCash"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Auto-print for Cash payments"
            android:checked="false" />

        <!-- Shop Info -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Information (for receipts)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="24dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etShopName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etShopAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="32dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etShopPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>
